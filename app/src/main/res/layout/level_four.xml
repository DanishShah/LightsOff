<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02"
            android:id="@+id/move"
            android:layout_gravity="left"
            android:textSize="70sp"
            android:layout_marginLeft="20dp" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/btn_soln"
                android:src="@drawable/soln"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btn_reset"
                android:layout_toStartOf="@+id/btn_reset"
                android:layout_alignParentRight="false"
                android:layout_marginRight="20dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/btn_reset"
                android:src="@drawable/reset"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_1"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_2"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_3"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_4"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_5"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_6"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_7"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_8"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_9"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_10"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_11"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_12"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_13"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_14"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_15"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_16"
                android:background="@drawable/light_off"
                android:layout_margin="3dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>